<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/hotelroom_ry_cardview"
        android:layout_width="160dp"
        android:layout_height="190dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="0dp">

        <ImageView
            android:id="@+id/hotelroom_ry_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/hotelroom_ry_name"
        app:layout_constraintStart_toEndOf="@id/hotelroom_ry_cardview"
        android:layout_width="150dp"
        android:layout_height="20dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="대부도 예그리나펜션"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:gravity="center_vertical"/>


    <TextView
       android:text="조식1인포함"
        android:textStyle="bold"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:id="@+id/hotelroom_inclusion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/hotelroom_ry_name"
        app:layout_constraintStart_toEndOf="@id/hotelroom_ry_cardview"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"/>


    <TextView
        android:id="@+id/hotelroom_category"
        android:textColor="#646464"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="기준2명 / 최대 2명"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/hotelroom_inclusion"
        app:layout_constraintStart_toEndOf="@id/hotelroom_ry_cardview"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"/>

    <TextView
        android:id="@+id/hotelroom_kindText"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="숙박 15:00 부터"
        app:layout_constraintStart_toEndOf="@id/hotelroom_ry_cardview"
        app:layout_constraintTop_toBottomOf="@id/hotelroom_category"
        android:layout_marginStart="10dp"/>


    <TextView
        android:layout_marginBottom="20dp"
        android:id="@+id/ry_kor"
        android:layout_marginEnd="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="원"
        android:textColor="@color/black"
        android:textSize="13sp"/>


    <TextView
        android:layout_marginBottom="20dp"
        android:id="@+id/hotelroom_real_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/ry_kor"
        android:text="120,000"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/hotelroom_before_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/text_sale"
        android:text="70,000원"
        android:textSize="11sp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="5dp"/>

    <TextView
        android:layout_marginEnd="20dp"
        android:id="@+id/text_sale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="판매가"
        app:layout_constraintBottom_toTopOf="@id/hotelroom_real_price"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="10sp"/>

    <TextView
        android:id="@+id/hotelroom_sale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="57%"
        android:textSize="15sp"
        app:layout_constraintEnd_toStartOf="@id/hotelroom_real_price"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="5dp"
        android:textStyle="bold"
        android:textColor="@color/btnpink"/>

    <View

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/hotelroom_real_price"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="3px"
        android:visibility="visible"
        android:background="#f2f2f2" />


</androidx.constraintlayout.widget.ConstraintLayout>