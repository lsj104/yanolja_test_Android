<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/dialog_close"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/dialogcancel"
            android:layout_gravity="center"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/signup_dralog_text"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginStart="130dp"/>

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp">

        <ImageView
            android:id="@+id/bottom_false"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/btn_gray"/>

        <ImageView
            android:visibility="invisible"
            android:id="@+id/bottom_blue"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/btn_blue"/>

        <LinearLayout
            android:id="@+id/bottom_sheet_linear"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp">

                <ImageView
                    android:id="@+id/dialogCheckall_false"
                    android:padding="7dp"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/squarecheck"/>

                <ImageView
                    android:id="@+id/dialogCheckall_true"
                    android:visibility="invisible"
                    android:padding="7dp"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/squarecheckblue"/>

            </FrameLayout>

            <TextView
                android:layout_marginStart="10dp"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:text="@string/signup_dialog_text_agree1"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:gravity="center_vertical"/>

            <TextView
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/signup_dialog_text_agree2"
                android:gravity="center_vertical"
                android:textSize="10sp"/>
        </LinearLayout>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:orientation="horizontal">


        <FrameLayout
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp">

            <ImageView
                android:id="@+id/dialogCheck1st_false"
                android:padding="7dp"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/check"/>

            <ImageView
                android:id="@+id/dialogCheck1st_true"
                android:visibility="invisible"
                android:padding="7dp"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/checkblue"/>

        </FrameLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="270dp"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:id="@+id/dialog_text_1_1"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="10dp"
                android:layout_width="250dp"
                android:layout_height="20dp"
                android:text="@string/dialog_text_1_1"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/dialog_text_1_2"
                app:layout_constraintTop_toBottomOf="@id/dialog_text_1_1"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="10dp"
                android:layout_width="95dp"
                android:layout_height="20dp"
                android:text="@string/dialog_text_1_2"
                android:textSize="12sp"/>

            <TextView
                android:layout_width="50dp"
                android:layout_height="20dp"
                app:layout_constraintTop_toBottomOf="@id/dialog_text_1_1"
                app:layout_constraintStart_toEndOf="@id/dialog_text_1_2"
                android:text="@string/dialog_text_1_3"
                android:textSize="10sp"
                android:gravity="center_vertical"
                android:textColor="#B22222"/>



        </androidx.constraintlayout.widget.ConstraintLayout>



        <ImageView
            android:layout_marginTop="5dp"
            android:layout_marginStart="3dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/dialogtoggle"
            android:layout_gravity="bottom"
            android:layout_marginBottom="10dp"
            android:padding="3dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp">

            <ImageView
                android:id="@+id/dialogCheck2nd_false"
                android:padding="7dp"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/check"/>

            <ImageView
                android:id="@+id/dialogCheck2nd_true"
                android:visibility="invisible"
                android:padding="7dp"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/checkblue"/>

        </FrameLayout>
        <TextView
            android:id="@+id/dialog_text_location"
            android:layout_marginStart="10dp"
            android:layout_width="140dp"
            android:layout_height="match_parent"
            android:text="@string/signup_dialog_text_agree3"
            android:gravity="center_vertical"
            android:textSize="12sp"/>

        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="140dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:text="@string/signup_dialog_text_optional"
            android:gravity="center_vertical"
            android:textSize="10sp"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp">

            <ImageView
                android:id="@+id/dialogCheck3rd_false"
                android:padding="7dp"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/check"/>

            <ImageView
                android:id="@+id/dialogCheck3rd_true"
                android:visibility="invisible"
                android:padding="7dp"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/checkblue"/>

        </FrameLayout>
        <TextView
            android:layout_marginStart="10dp"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:text="@string/signup_dialog_text_agree4"
            android:gravity="center_vertical"
            android:textSize="12sp"/>

        <TextView
            android:layout_marginStart="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_width="140dp"
            android:layout_height="match_parent"
            android:text="@string/signup_dialog_text_optional"
            android:gravity="center_vertical"
            android:textSize="10sp"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginEnd="10dp"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp">

                <ImageView
                    android:id="@+id/dialogCheck4th_false"
                    android:padding="7dp"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/check"/>

                <ImageView
                    android:id="@+id/dialogCheck4th_true"
                    android:visibility="invisible"
                    android:padding="7dp"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/checkblue"/>

            </FrameLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/dialog_text_5_1"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="10dp"
                    android:layout_width="160dp"
                    android:layout_height="20dp"
                    android:text="@string/signup_dialog_text_agree5"
                    android:gravity="center_vertical"
                    android:textSize="12sp"/>

                <TextView
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@id/dialog_text_5_1"
                    android:layout_width="40dp"
                    android:layout_height="20dp"
                    android:text="@string/signup_dialog_text_optional"
                    android:gravity="center_vertical"
                    android:layout_marginStart="5dp"
                    android:textSize="10sp"/>

                <TextView
                    app:layout_constraintTop_toBottomOf="@id/dialog_text_5_1"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:text="@string/signup_dialog_text_agree6"
                    android:gravity="top"
                    android:layout_marginStart="10dp"
                    android:textSize="8sp"/>

            </androidx.constraintlayout.widget.ConstraintLayout>



        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:orientation="horizontal">

        </LinearLayout>


    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatButton
            android:layout_marginTop="10dp"
            android:id="@+id/dialog_btn_next_gray"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:background="@drawable/btn_next_gray"
            android:textColor="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:textStyle="bold"
            android:text="@string/signup_btn_next">
        </androidx.appcompat.widget.AppCompatButton>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_marginTop="10dp"
            android:visibility="invisible"
            android:id="@+id/dialog_btn_next_pink"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:background="@drawable/btn_confirm_pink"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:textStyle="bold"
            android:text="@string/signup_btn_next">
        </androidx.appcompat.widget.AppCompatButton>

    </FrameLayout>


</LinearLayout>